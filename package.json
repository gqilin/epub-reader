{
  "name": "epubreader",
  "version": "1.0.0",
  "type": "module",
  "description": "A framework-agnostic EPUB parser library for JavaScript",
  "main": "dist/epubreader.js",
  "module": "dist/epubreader.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "serve": "http-server . -p 8080 -o",
    "start": "npm run serve"
  },
  "keywords": [
    "epub",
    "parser",
    "reader",
    "ebook",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "rollup": "^3.25.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  }
}